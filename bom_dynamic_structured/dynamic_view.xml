<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_structure_structure_dynamic_bom_form">
            <field name="name">structure.structure.form</field>
            <field name="model">structure.structure</field>
            <field name="inherit_id" ref="product_speech_code.view_structure_structure_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <button name="create_dynamic_bom" string="Dyamic BOM" type="object" />
                    <field name="dynamic_bom_id" invisible="1" />
                </field>
            </field>             
        </record>
        
        <!--mrp.bom-->
        <record model="ir.ui.view" id="view_mrp_bom_dynamic_form">
            <field name="name">mrp.bom.dynamic.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>            
            <field name="arch" type="xml">
                <field name="bom_line_ids" position="attributes">
                    <attribute name="attrs">{'invisible': [('bom_category','=','dynamic')]}</attribute>
                </field>                
                <field name="bom_line_ids" position="after">
                    <group colspan="4" col="4">
                        <field name="structure_id" readonly="1" colspan="2"/>
                        <button name="open_bom_dynamic_lines" string="Manage dynamic lines" type="object" icon="gtk-justify-fill"/>
                        <separator string="Dynamic BOM" colspan="4"/>
                        <field name="bom_line_ids" attrs="{'invisible': [('bom_category','!=','dynamic')]}" context="{'default_type': 'normal'}" nolabel="1" colspan="4">
                            <tree string="Dynamic BOM" editable="bottom">
                                <field name="product_id" /><!--onchange-->
                                <field name="dynamic_mask" />
                                <field name="product_qty" />
                                <field name="product_uom" />
                            </tree>
                        </field>
                    </group>    
                </field>
            </field>
        </record>
        
        <!--mrp.bom.line-->
        <record model="ir.ui.view" id="view_mrp_bom_line_dynamic_tree">
            <field name="name">mrp.bom.line.dynamic.tree</field>
            <field name="model">mrp.bom.line</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree string="String" editable="mrp_bom_line">        
                    <field name="product_id" /><!--onchange-->
                    <field name="dynamic_mask" />
                    <field name="product_qty" />
                    <field name="product_uom" />
                </tree>
            </field>
        </record>
        
        <!--product.product-->
        <record model="ir.ui.view" id="view_product_product_dynamic_bom_form">
            <field name="name">product.product.dynamic.bom.line.form</field>
            <field name="model">product.product</field>
            <field name="priority" eval="50" />
            <field name="arch" type="xml">
                <form string="Product dynamic BOM" version="7.0">        
                    <sheet>
                        <group col="4" colspan="4">
                            <field name="name" />
                            <field name="default_code" />
                            <field name="structure_id" />
                            <separator string="Dynamic BOM line" colspan="4"/>
                            <field name="dynamic_bom_line_ids" nolabel="1" colspan="4" readonly="1">
                                <field name="product_id" />
                                <field name="dynamic_mask" />
                                <field name="product_qty" />
                                <field name="product_uom" />
                            </field>
                        </group>
                    </sheet>        
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_product_product_dynamic_bom_tree">
            <field name="name">product.product.dynamic.bom.line.tree</field>
            <field name="model">product.product</field>
            <field name="priority" eval="50" />
            <field name="arch" type="xml">
                <tree string="Product dynamic BOM" version="7.0">        
                    <field name="name" />
                    <field name="default_code" />
                    <field name="structure_id" />
                    <separator string="Dynamic BOM line" colspan="4"/>
                </tree>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_product_product_bom_line_dynamic">
            <field name="name">Product dynamic BOM</field>
            <field name="res_model">product.product</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_product_product_dynamic_bom_tree"/>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>        
        <menuitem 
            parent="mrp.menu_mrp_product_form" 
            id="menu_product_product_bom_line_dynamic" 
            action="action_product_product_bom_line_dynamic"
            />
    </data>
</openerp>

