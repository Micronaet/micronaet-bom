<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_purchase_order_from_bom_form">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="date_order" position="after">
                    <field name="explode_bom" />
                </field>
                <xpath expr="//page[1]" position="after">
                    <page string="BOM explode" attrs="{'invisible': [('explode_bom','=',False)]}">
                        <button name="explode_bom_purchase_line" string="Explode BOM" type="object" />
                        <field name="explode_bom_ids">
                            <tree editable="bottom" string="Explode BOM" colors="red:explode_bom_error!=False">
                                <field name="bom_id" domain="[('bom_category','=','parent')]"/>
                                <field name="quantity" />
                                <field name="explode_bom_calc" />
                                <field name="explode_bom_error" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

