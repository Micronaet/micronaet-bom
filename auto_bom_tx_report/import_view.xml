<?xml version="1.0"?>
<openerp>
    <data>
       <!-- purchase.order.xlsx -->
       <record id="purchase_order_xlsx_view" model="ir.ui.view">
            <field name="name">Import order for material</field>
            <field name="model">purchase.order.xlsx</field>
            <field name="arch" type="xml">
                <form string="Import order" version="7.0">
                   <header>
                       <button string="Cancel" special="cancel" />
                       <button name="action_import_order" string="Import" type="object" icon="gtk-jump-to" class="oe_highlight" attrs="{'invisible': [('mode','!=','draft')]}"/>
                       <button name="action_create_order" string="Create order" type="object" icon="gtk-jump-to" class="oe_highlight" attrs="{'invisible': [('mode','!=','imported')]}"/>
                   </header>                   
                   <group colspan="4" col="4">
                        <field name="file" colspan="4" />
                        <field name="mode" invisible="1" />

                        <separator string="Details:" colspan="4"/>
                        <field name="line_ids" colspan="4" nolabel="1">
                            <tree string="Order details:">
                                 <field name="partner_id" />
                                 <field name="product_id" />
                                 <field name="quantity" />
                                 <field name="deadline" />                            
                            </tree>
                        </field>
                   </group>
                </form>
            </field>
      </record>
      <record model="ir.actions.act_window" id="action_purchase_order_xlsx_view">
          <field name="name">Import purchase order</field>
          <field name="res_model">purchase.order.xlsx</field>
          <field name="view_type">form</field>
          <field name="view_mode">form</field>
          <field name="target">new</field>
          <field name="view_id" ref="purchase_order_xlsx_view"/>
      </record>
      <menuitem 
          parent="purchase.menu_purchase_rfq" 
          id="menu_purchase_order_xlsx" 
          action="action_purchase_order_xlsx_view"
          />      
    </data>
</openerp>

