<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_product_product_halfwork_form">
            <field name="name">product.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <field name="sale_ok" position="before">
                    <field name="halfwork" />
                    <label for="halfwork" />
                </field>
                <xpath expr="//page[2]" position="after">
                    <page string="Halfwork BOM" attrs="{'invisible': [('halfwork','=',False)]}"> 
                        <group colspan="4" col="4">
                            <field name="half_bom_id" attrs="{'invisible': [('half_bom_id','=',False)]}"/>
                            <button name="create_product_half_bom" string="Create halfworked BOM" type="object" attrs="{'invisible': [('half_bom_id','!=',False)]}"/>
                            
                            <field name="half_bom_ids" attrs="{'invisible': [('half_bom_id','=',False)]}" colspan="4" context="{'default_bom_id': half_bom_id}">
                                <tree string="Half BOM component" editable="bottom" nolabel="1">
                                    <field name="bom_id" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="product_qty" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>

